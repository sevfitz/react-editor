{
    "env": {
        "node": true,
        "mocha": true,
        "es6": true
    },
    "extends": [
        "react-app",
        "eslint:recommended"
    ],
    "rules": {
        "no-console": "off",
        "indent": [
            "error",
            4
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ]
    }
}
